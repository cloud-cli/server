{
  "name": "@web-design-system/server",
  "private": true,
  "version": "0.0.0",
  "main": "./src/index.mjs",
  "scripts": {
    "ci": "rm presets/* && npm run build",
    "build": "npm run presets && npm run compile",
    "presets": "node server/presets.mjs",
    "compile": "for i in $(ls -1 systems | sed s/.mjs//); do echo $i; PRESET=$i tailwindcss -m -i ./presets/$i.tpl.css -o ./presets/$i.css; rm ./presets/$i.tpl.css; done"
  },
  "prettier": "@cloud-cli/prettier-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-design-system/server.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@cloud-cli/prettier-config": "^1.0.0"
  },
  "dependencies": {
    "tailwindcss": "^2.2.19"
  }
}
